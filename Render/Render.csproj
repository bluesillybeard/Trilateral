<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../vmodel/vmodel.csproj" /><!-- custom library to load custom model format-->
    <ProjectReference Include="../VStbImageSharp/VStbImageSharp.csproj" /><!-- a modified version of STBImageSharp that supports qoi (open format) and vqoi (custom format for voxelesque)-->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenTK" Version="4.4.0" /><!--OpenTK since this project uses OpenTK to expose OpenGL functions and provide a windowing system-->
  </ItemGroup>

</Project>
